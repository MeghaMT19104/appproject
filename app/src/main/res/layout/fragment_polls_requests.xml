<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_r"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:visibility="visible"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/card_margin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text= "Destination"
                android:layout_weight="0.7"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                />
            <TextView
                android:id="@+id/dest_r"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:text="@string/destination_p"
                android:textAlignment="center"
                android:textStyle="bold|italic"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/card_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.3">
                <TextView
                    android:id="@+id/price_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/estimated_price"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"/>
            </LinearLayout>
           <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.3">
                <TextView
                    android:id="@+id/time_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/time"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="0.3">
                <TextView
                    android:id="@+id/date_r"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textAlignment="center"
                    android:textStyle="bold|italic"/>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/seat"
            android:layout_width="816dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/traveller"
            android:textAlignment="center" />
